{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Extension Data Package Profile",
  "allOf": [
    { "$ref": "https://datapackage.org/profiles/2.0/datapackage.json" },
    { "$ref": "#/definitions/Package" }
  ],
  "definitions": {
    "Package": {
      "type": "object",
      "required": ["$schema", "resources"],
      "properties": {
        "$schema": {
          "const": "https://raw.githubusercontent.com/datisthq/extensiondp/v0.1.2/extension/profile.json"
        },
        "resources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Resource"
          }
        }
      }
    },
    "Resource": {
      "oneOf": [
        {
          "$ref": "#/definitions/Table1Resource"
        },
        {
          "$ref": "#/definitions/Table2Resource"
        }
      ]
    },
    "Table1Resource": {
      "type": "object",
      "required": ["name", "schema"],
      "description": "Data records have to conform to the Table1 schema",
      "properties": {
        "name": {
          "const": "table1"
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/extensiondp/v0.1.2/extension/schemas/table1.json"
        }
      }
    },
    "Table2Resource": {
      "type": "object",
      "required": ["name", "schema"],
      "description": "Data items have to conform to the Table2 schema",
      "properties": {
        "name": {
          "const": "table2"
        },
        "schema": {
          "const": "https://raw.githubusercontent.com/datisthq/extensiondp/v0.1.2/extension/schemas/table2.json"
        }
      }
    }
  }
}
